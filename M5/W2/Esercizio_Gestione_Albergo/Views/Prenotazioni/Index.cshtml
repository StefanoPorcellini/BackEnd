@model IEnumerable<Esercizio_Gestione_Albergo.Models.Prenotazione>

@{
    ViewData["Title"] = "Prenotazioni";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Crea Nuova Prenotazione</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Numero Prenotazione</th>
            <th>Cliente Codice Fiscale</th>
            <th>Camera Numero</th>
            <th>Data Prenotazione</th>
            <th>Dal</th>
            <th>Al</th>
            <th>Caparra Confirmatoria</th>
            <th>Tariffa</th>
            <th>Saldo Finale</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NumeroProgressivo</td>
                <td>@item.ClienteCodiceFiscale</td>
                <td>@item.CameraNumero</td>
                <td>@item.DataPrenotazione</td>
                <td>@item.Dal</td>
                <td>@item.Al</td>
                <td>@item.CaparraConfirmatoria</td>
                <td>@item.Tariffa</td>
                <td>
                    <a asp-action="Dettagli" asp-route-id="@item.ID" class="btn btn-info"><i class="bi bi-zoom-in"></i></a>
                    <a asp-action="Modifica" asp-route-id="@item.ID" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Elimina" asp-route-id="@item.ID" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
