@model Esercizio_Gestione_Albergo.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Delete Cliente";
}

<h1>Delete Cliente</h1>

<h3>Sei sicuro di voler eliminare questo cliente?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Codice Fiscale
        </dt>
        <dd class="col-sm-10">
            @Model.CodiceFiscale
        </dd>
        <dt class="col-sm-2">
            Cognome
        </dt>
        <dd class="col-sm-10">
            @Model.Cognome
        </dd>
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Città
        </dt>
        <dd class="col-sm-10">
            @Model.Città
        </dd>
        <dt class="col-sm-2">
            Provincia
        </dt>
        <dd class="col-sm-10">
            @Model.Provincia
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Telefono
        </dt>
        <dd class="col-sm-10">
            @Model.Telefono
        </dd>
        <dt class="col-sm-2">
            Cellulare
        </dt>
        <dd class="col-sm-10">
            @Model.Cellulare
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodiceFiscale" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Cancel</a>
    </form>
</div>
