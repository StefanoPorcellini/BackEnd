@{
    ViewData["Title"] = "ProductDetails";
}

<h1>Pizza @Model.Name</h1>

@model Esercizio_Pizzeria_In_Forno.Models.Product

@{
    ViewData["Title"] = "Dettagli Prodotto";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
      
        <div class="form-group">
            <label asp-for="Photo" class="control-label">Foto</label>
            <p><img src="@Model.Photo" alt="Foto prodotto" style="max-width: 200px;" /></p>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Prezzo</label>
            <p>@Model.Price.ToString("C")</p>
        </div>
        <div class="form-group">
            <label asp-for="DeliveryTimeInMinutes" class="control-label">Tempo di Consegna</label>
            <p>@Model.DeliveryTimeInMinutes minuti</p>
        </div>
    </div>
</div>

<div>
    <a asp-action="UpdateProduct" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i</a>
    <a asp-action="GetAllProducts" class="btn btn-secondary"><i class="bi bi-arrow-left"></i></a>
</div>
