@model Esercizio_M5_W1.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoCliente" class="control-label"></label>
                <input asp-for="tipoCliente" class="form-control" />
                <span asp-validation-for="tipoCliente" class="text-danger"></span>
            </div>
            <div class="form-group @(Model.tipoCliente == "Azienda"? "d-none" : "")">
                <label asp-for="CF" class="control-label"></label>
                <input asp-for="CF" class="form-control" />
                <span asp-validation-for="CF" class="text-danger"></span>
            </div>
            <div class="form-group @(Model.tipoCliente == "Privato"? "d-none" : "")">
                <label asp-for="PIVA" class="control-label"></label>
                <input asp-for="PIVA" class="form-control" />
                <span asp-validation-for="PIVA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
