@model IEnumerable<Esercizio_M5_W1.Models.Cliente>

@{
    ViewData["Title"] = "Lista Clienti";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuovo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Codice Fiscale</th>
            <th>Partita IVA</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.tipoCliente</td>
                <td>@cliente.CF</td>
                <td>@cliente.PIVA</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Cliente" asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
